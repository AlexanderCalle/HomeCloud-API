{
    "env": {
      "es6": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["import", "@typescript-eslint"],
    "rules": {
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "always"
        }
      ],
      "no-inner-declarations": "off",
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "comma-dangle": ["error", "always-multiline"],
      "max-len": [
        "error",
        {
          "code": 120,
          "tabWidth": 2,
          "ignoreStrings": true
        }
      ],
      "arrow-parens": ["error", "always"],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ]
    }
  }