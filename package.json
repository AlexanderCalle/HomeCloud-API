  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npx ts-node src/index.ts",
    "dev": "env-cmd nodemon",
    "serve": "ts-node src/index.ts",
    "build": "tsc"
  },
  "nodemonConfig": {
    "signal": "SIGTERM",
    "ignore": [
      "node_modules/*",
      ".vscode/*"
    ],
    "delay": "80",
    "watch": [
      "config",
      "src"
    ],
    "ext": "js,json",
    "legacyWatch": true,
    "exec": "node --inspect --trace-warnings src/index.js"
  },
  "devDependencies": {
    "@types/koa": "^2.14.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "@types/koa__router": "^12.0.4",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@koa/router": "^12.0.1",
    "@prisma/client": "^5.9.1",
    "config": "^3.3.11",
    "koa": "^2.15.0",
    "koa-bodyparser": "^4.4.1",
    "koa-cors": "^0.0.16",
    "node-emoji": "1.11.0",
    "winston": "^3.11.0"
  }
}
