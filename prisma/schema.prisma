// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // output   = "../src/data/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id
  firstname    String
  lastname     String
  email        String   @unique
  profilePic   String?
  role         Role     @default(USER)
  home         Folder   @relation(name: "homeFolder", fields: [homeFolderId], references: [id])
  homeFolderId Int      @unique
  File         File[]
  Folder       Folder[]
}

model Folder {
  id         Int      @id @default(autoincrement())
  name       String
  url        String
  modifiedAt DateTime @default(now())
  size       Int?     @default(0)
  user       User     @relation(fields: [userId], references: [id]) // Does it need a reference to the user ?
  userId     Int
  HomeTo     User?    @relation("homeFolder")
  File       File[]
}

model File {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  url       String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  type      String
  size      Int
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  folder    Folder    @relation(fields: [folderId], references: [id])
  folderId  Int
}

enum Role {
  USER
  ADMIN
}
